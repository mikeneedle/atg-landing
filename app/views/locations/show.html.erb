<h2 align="center">Locations</h2>
  <div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center description"><strong>Description:</strong></h4>
    <hr>
    <%= simple_format(@location.description) %>
    <%# if @article.categories.any? %>
      <p>Categories: <%#= render @article.categories %></p>
    <%# end %>
    <div class="article-actions">
      <%= link_to "Edit this location", edit_location_path(@location), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this location", location_path(@location), method: :delete,
      data: { confirm: "Are you sure you want to delete the location?"},
      class: "btn btn-xs btn-danger" %>
      <%= link_to "View all locations", locations_path, class: "btn btn-xs btn-success" %>
    </div>
  </div>