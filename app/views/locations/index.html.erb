<h1 align="center">Listing All Locations</h1>

<div align="center">
<%= link_to "New Location", new_location_path %>
<% @locations.each do |location| %>

<ul class="listing">

<div class="row">

<div class="well col-md-4 col-md-offset-4">

<li class="article-title">

<%= link_to "#{location.description}", location_path(location) %>

</li>

 <%# if logged_in? and current_user.admin? %>

<div class="row">

<span class="badge"><%= link_to "Edit Location Name", edit_location_path(location) %></span>
<%= link_to "Delete this location", location_path(location), method: :delete,
data: { confirm: "Are you sure you want to delete the location?"},
class: "btn btn-xs btn-danger" %>

</div>

<%# end %>
</div>

</div>

</ul>

<% end %>


</div>