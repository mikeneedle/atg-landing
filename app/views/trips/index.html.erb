<h1 align="center">Listing All Trips</h1>

<div align="center">
<%= link_to "New Trip", new_trip_path %>
<% @trips.each do |trip| %>

<ul class="listing">

<div class="row">

<div class="well col-md-4 col-md-offset-4">

<li class="article-title">
First Name: <%= trip.first_name %>
</li>
<li class="article-title">
Last Name: <%= trip.last_name %>
</li>
<li class="article-title">
Email: <%= trip.email %>
</li>
<li class="article-title">
Trip Details: <%= trip.details %>
</li>
<li class="article-title">
Location: 
<%= trip.location.description if trip.location %>
</li>
<li>  
  
    <% if trip.activities.any? %>
      Categories:
        <% trip.activities.each do |activity| %>
        <%= activity.description %>
      <% end %>
    <% end %>
  
</li>

 <%# if logged_in? and current_user.admin? %>

<div class="row">

<span class="badge"><%= link_to "Edit Activity Name", edit_trip_path(trip) %></span>
<%= link_to "Delete this trip", trip_path(trip), method: :delete,
data: { confirm: "Are you sure you want to delete the trip?"},
class: "btn btn-xs btn-danger" %>

</div>

<%# end %>
</div>

</div>

</ul>

<% end %>


</div>