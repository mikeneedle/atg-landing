<%= render 'shared/errors', obj: @trip %>

  <div class='row'>
    <div class='col-xs-12'>
      <%= form_for(@trip, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :first_name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :last_name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", autofocus: true %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :email, class: "form-control", placeholder: "E-Mail Address", autofocus: true %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :details %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :details, rows: 10, class: "form-control", placeholder: "Trip Details" %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :location %>
          </div>
          <div class="col-sm-8">
            <%= f.collection_select :location_id, Location.all, :id, :description %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Experience_Level %>
          </div>
          <div class="col-sm-8">
            <%= f.collection_select :experience_id, Experience.all, :id, :description %>
          </div>
        </div>
        
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Date_flexibility %>
          </div>
          <div class="col-sm-8">
            <%= f.collection_select :flexible_id, Flexible.all, :id, :description %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Date_flexibility %>
          </div>
          <div class="col-sm-8">
            <%#= f.collection_select :flexible_id, Flexible.all, :id, :description %>
            <%#= options_for_select((0..28).to_a.collect { |v| v.to_f / 2 + 1 }) %>
            <%= f.select :group_size, (1..10) %>
          </div>
        </div>
        
        
        
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :Activities %>
          </div>
          <div class="col-sm-8">
            <%= f.collection_check_boxes :activity_ids, Activity.all, :id, :description do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>
        
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :start_date %>
          </div>
          <div class="col-sm-2">
            <%= f.text_field :start_date, :class => 'form-control datepicker' %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label "End Date" %>
          </div>
          <div class="col-sm-2">
            <%= f.text_field :end_date, :class => 'form-control datepicker' %>
          </div>
        </div>
        
        
        <%= f.hidden_field :flexible, :value => 1 %>
        <%= f.hidden_field :booked, :value => "0" %>
        

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to trips listing", trips_path %> ]
    </div>
  </div>
</div>
<%= debug(params) if Rails.env.development? %>
 
