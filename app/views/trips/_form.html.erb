<%#= render 'shared/errors', obj: @trip %>

  <div class='row'>
    <div class='col-xs-12'>
      <%= form_for(@trip, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :first_name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :last_name %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name", autofocus: true %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :email %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :email, class: "form-control", placeholder: "E-Mail Address", autofocus: true %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :details %>
          </div>
          <div class="col-sm-8">
            <%= f.text_area :details, rows: 10, class: "form-control", placeholder: "Trip Details" %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :location %>
          </div>
          <div class="col-sm-8">
            <%= f.collection_select :location_id, Location.all, :id, :description %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :activities %>
          </div>
          
            <div class="col-sm-8">
              <%= f.collection_check_boxes :activity_ids, Activity.all, :id, :description do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
              <% end %>
            </div>
          
        </div>
        
        <%= f.hidden_field :booked, :value => "0" %>
        <%#= hidden_field :booked, "0" %>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to trips listing", trips_path %> ]
    </div>
  </div>
</div>
<%= debug(params) if Rails.env.development? %>
 
