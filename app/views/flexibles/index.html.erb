<h1 align="center">Listing All Flexibility</h1>

<div align="center">
<%= link_to "New Flexibility", new_flexible_path %>
<% @flexibles.each do |flexible| %>

<ul class="listing">

<div class="row">

<div class="well col-md-4 col-md-offset-4">

<li class="article-title">

<%= link_to "#{flexible.description}", flexible_path(flexible) %>

</li>

 <%# if logged_in? and current_user.admin? %>

<div class="row">

<span class="badge"><%= link_to "Edit Flexible Name", edit_flexible_path(flexible) %></span>
<%= link_to "Delete this flexibility", flexible_path(flexible), method: :delete,
data: { confirm: "Are you sure you want to delete the flexibility?"},
class: "btn btn-xs btn-danger" %>

</div>

<%# end %>
</div>

</div>

</ul>

<% end %>


</div>