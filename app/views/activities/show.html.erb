<h2 align="center">Activities</h2>
  <div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center description"><strong>Description:</strong></h4>
    <hr>
    <%= simple_format(@activity.description) %>
    <%# if @article.categories.any? %>
      <p>Categories: <%#= render @article.categories %></p>
    <%# end %>
    <div class="article-actions">
      <%= link_to "Edit this activity", edit_activity_path(@activity), class: "btn btn-xs btn-primary" %>
      <%= link_to "Delete this activity", activity_path(@activity), method: :delete,
      data: { confirm: "Are you sure you want to delete the activity?"},
      class: "btn btn-xs btn-danger" %>
      <%= link_to "View all activities", activities_path, class: "btn btn-xs btn-success" %>
    </div>
  </div>