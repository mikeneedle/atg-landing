<h1 align="center">Listing All Activities</h1>

<div align="center">
<%= link_to "New Activity", new_activity_path %>
<% @activities.each do |activity| %>

<ul class="listing">

<div class="row">

<div class="well col-md-4 col-md-offset-4">

<li class="article-title">

<%= link_to "#{activity.description}", activity_path(activity) %>

</li>

 <%# if logged_in? and current_user.admin? %>

<div class="row">

<span class="badge"><%= link_to "Edit Activity Name", edit_activity_path(activity) %></span>
<%= link_to "Delete this activity", activity_path(activity), method: :delete,
data: { confirm: "Are you sure you want to delete the activity?"},
class: "btn btn-xs btn-danger" %>

</div>

<%# end %>
</div>

</div>

</ul>

<% end %>


</div>